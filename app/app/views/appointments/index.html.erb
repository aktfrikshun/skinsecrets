<div class="bg-gray-50 min-h-screen py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8">
      <div class="mb-4 sm:mb-0">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">My Appointments</h1>
        <p class="text-gray-600">Manage your upcoming appointments and view your booking history.</p>
      </div>
      <%= link_to new_appointment_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-amber-500 to-amber-600 text-white font-medium rounded-lg hover:from-amber-600 hover:to-amber-700 transition-all duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5" do %>
        <i class="fas fa-plus mr-2"></i>Book New Appointment
      <% end %>
    </div>
    
    <% if @appointments.any? %>
      <!-- Appointments Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <% @appointments.each do |appointment| %>
          <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-200 border border-gray-100">
            <div class="p-6">
              <!-- Header -->
              <div class="flex justify-between items-start mb-4">
                <div class="flex-1">
                  <h3 class="text-xl font-semibold text-gray-900 mb-1"><%= appointment.service.name %></h3>
                  <p class="text-gray-600 flex items-center">
                    <i class="fas fa-calendar mr-2 text-amber-500"></i><%= appointment.formatted_date %>
                  </p>
                </div>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-<%= appointment.status_color %>-100 text-<%= appointment.status_color %>-800">
                  <%= appointment.status.titleize %>
                </span>
              </div>
              
              <!-- Details Grid -->
              <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                  <p class="text-sm text-gray-500 mb-1">Time</p>
                  <p class="font-medium text-gray-900"><%= appointment.formatted_time %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500 mb-1">Duration</p>
                  <p class="font-medium text-gray-900"><%= appointment.service.formatted_duration %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500 mb-1">Price</p>
                  <p class="font-bold text-amber-600"><%= appointment.service.formatted_price %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500 mb-1">Esthetician</p>
                  <p class="font-medium text-gray-900">To be assigned</p>
                </div>
              </div>
              
              <!-- Notes -->
              <% if appointment.notes.present? %>
                <div class="mb-4 p-3 bg-gray-50 rounded-lg">
                  <p class="text-sm text-gray-500 mb-1">Notes</p>
                  <p class="text-gray-900"><%= appointment.notes %></p>
                </div>
              <% end %>
              
              <!-- Actions -->
              <div class="flex flex-wrap gap-2">
                <%= link_to appointment_path(appointment), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors duration-200" do %>
                  <i class="fas fa-eye mr-1"></i>View Details
                <% end %>
                
                <% if appointment.status == 'pending' %>
                  <%= link_to edit_appointment_path(appointment), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors duration-200" do %>
                    <i class="fas fa-edit mr-1"></i>Edit
                  <% end %>
                  
                  <%= link_to appointment_path(appointment), 
                      method: :delete, 
                      data: { confirm: "Are you sure you want to cancel this appointment?" },
                      class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-lg text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200" do %>
                    <i class="fas fa-times mr-1"></i>Cancel
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="mx-auto w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center mb-6">
          <i class="fas fa-calendar-times text-4xl text-gray-400"></i>
        </div>
        <h3 class="text-2xl font-semibold text-gray-900 mb-4">No Appointments Yet</h3>
        <p class="text-gray-600 mb-8 max-w-md mx-auto">You don't have any upcoming appointments. Book your first treatment today!</p>
        <%= link_to new_appointment_path, class: "inline-flex items-center px-8 py-4 bg-gradient-to-r from-amber-500 to-amber-600 text-white font-medium rounded-lg hover:from-amber-600 hover:to-amber-700 transition-all duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5" do %>
          <i class="fas fa-plus mr-2"></i>Book Your First Appointment
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Past Appointments Section -->
<div class="bg-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-8">Past Appointments</h2>
    <% past_appointments = @current_user.appointments.past.limit(5) %>
    
    <% if past_appointments.any? %>
      <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% past_appointments.each do |appointment| %>
              <tr class="hover:bg-gray-50 transition-colors duration-200">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= appointment.service.name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= appointment.formatted_date %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= appointment.formatted_time %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= appointment.status_color %>-100 text-<%= appointment.status_color %>-800">
                    <%= appointment.status.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= link_to appointment_path(appointment), class: "inline-flex items-center px-3 py-1 border border-gray-300 text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors duration-200" do %>
                    <i class="fas fa-eye mr-1"></i>View
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500">No past appointments to display.</p>
      </div>
    <% end %>
  </div>
</div> 