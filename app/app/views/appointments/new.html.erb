<div class="bg-gray-50 min-h-screen py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-xl shadow-lg">
      <div class="p-8">
        <!-- Header -->
        <div class="text-center mb-8">
          <div class="mx-auto w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-calendar-plus text-2xl text-amber-600"></i>
          </div>
          <h2 class="text-3xl font-bold text-gray-900 mb-2">Book Your Appointment</h2>
          <p class="text-gray-600">Select your preferred service, date, and time to schedule your appointment.</p>
        </div>
        
        <%= form_with model: @appointment, local: true do |form| %>
          <% if @appointment.errors.any? %>
            <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
              <h6 class="text-red-800 font-medium mb-2">Please fix the following errors:</h6>
              <ul class="text-red-700 space-y-1">
                <% @appointment.errors.full_messages.each do |message| %>
                  <li class="flex items-center">
                    <i class="fas fa-exclamation-circle mr-2"></i><%= message %>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <!-- Service and Date Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <%= form.label :service_id, "Select Service", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.collection_select :service_id, @services, :id, :name, 
                  { prompt: "Choose a service..." }, 
                  { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500", required: true } %>
            </div>
            
            <div>
              <%= form.label :appointment_date, "Appointment Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.date_field :appointment_date, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500", 
                  min: Date.current,
                  required: true %>
            </div>
          </div>
          
          <!-- Time and Duration Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <%= form.label :appointment_time, "Preferred Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.time_field :appointment_time, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500",
                  min: "09:00",
                  max: "19:00",
                  step: 900,
                  required: true %>
              <p class="text-sm text-gray-500 mt-1">Available hours: 9:00 AM - 7:00 PM</p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Duration</label>
              <div class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg text-gray-700" id="service-duration">
                Select a service to see duration
              </div>
            </div>
          </div>
          
          <!-- Notes -->
          <div class="mb-6">
            <%= form.label :notes, "Special Requests or Notes", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :notes, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500", 
                rows: 3,
                placeholder: "Any special requests, skin concerns, or notes for your esthetician..." %>
          </div>
          
          <!-- Information Alert -->
          <div class="mb-8 p-4 bg-blue-50 border border-blue-200 rounded-lg">
            <h6 class="text-blue-800 font-medium mb-3 flex items-center">
              <i class="fas fa-info-circle mr-2"></i>Booking Information
            </h6>
            <ul class="text-blue-700 space-y-1">
              <li class="flex items-start">
                <i class="fas fa-clock mr-2 mt-0.5 text-xs"></i>Please arrive 10 minutes before your scheduled appointment time
              </li>
              <li class="flex items-start">
                <i class="fas fa-calendar-times mr-2 mt-0.5 text-xs"></i>Cancellations require 24 hours notice
              </li>
              <li class="flex items-start">
                <i class="fas fa-envelope mr-2 mt-0.5 text-xs"></i>We'll confirm your appointment via email
              </li>
            </ul>
          </div>
          
          <!-- Form Actions -->
          <div class="flex flex-col sm:flex-row justify-between gap-4">
            <%= link_to "Cancel", appointments_path, class: "inline-flex justify-center items-center px-6 py-3 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors duration-200" %>
            <%= form.submit "Book Appointment", class: "inline-flex justify-center items-center px-8 py-3 bg-gradient-to-r from-amber-500 to-amber-600 text-white font-medium rounded-lg hover:from-amber-600 hover:to-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-all duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const serviceSelect = document.getElementById('appointment_service_id');
  const durationDisplay = document.getElementById('service-duration');
  
  // Store service durations
  const serviceDurations = {
    <% @services.each do |service| %>
      <%= service.id %>: "<%= service.formatted_duration %>",
    <% end %>
  };
  
  serviceSelect.addEventListener('change', function() {
    const selectedServiceId = this.value;
    if (selectedServiceId && serviceDurations[selectedServiceId]) {
      durationDisplay.textContent = serviceDurations[selectedServiceId];
    } else {
      durationDisplay.textContent = 'Select a service to see duration';
    }
  });
});
</script> 