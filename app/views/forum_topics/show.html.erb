<div class="bg-gradient-to-br from-amber-50 to-warm-50 py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Topic Header -->
    <div class="bg-white rounded-2xl shadow-lg mb-8">
      <div class="p-8">
        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-start mb-6">
          <div class="mb-6 lg:mb-0">
            <h1 class="font-playfair text-3xl md:text-4xl font-bold text-gray-900 mb-4"><%= @forum_topic.title %></h1>
            <div class="flex flex-wrap items-center text-gray-500 text-sm space-x-6">
              <span class="flex items-center">
                <i class="fas fa-user mr-2 text-amber-600"></i><%= @forum_topic.user.full_name %>
                <% if @forum_topic.user.email == 'ai@skinsecrets.com' %>
                  <span class="ml-2 px-2 py-1 bg-gradient-to-r from-purple-500 to-blue-500 text-white text-xs rounded-full font-medium">
                    <i class="fas fa-robot mr-1"></i>AI Generated
                  </span>
                <% end %>
                <% if @forum_topic.user.email == 'ai@skinsecrets.com' || @forum_topic.user.email == 'admin@skinsecretsnc.com' %>
                  <span class="ml-2 px-2 py-1 bg-gradient-to-r from-blue-500 to-blue-600 text-white text-xs rounded-full font-medium">
                    <i class="fab fa-facebook mr-1"></i>Posted to Facebook
                  </span>
                <% end %>
              </span>
              <span class="flex items-center">
                <i class="fas fa-calendar mr-2 text-amber-600"></i><%= @forum_topic.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </span>
              <span class="flex items-center">
                <i class="fas fa-comments mr-2 text-amber-600"></i><%= @forum_topic.post_count %> posts
              </span>
            </div>
          </div>
          <div class="flex gap-3">
            <%= link_to forum_topics_path, class: "border border-gray-300 text-gray-700 px-4 py-2 rounded-lg font-medium hover:bg-gray-50 transition-colors duration-300" do %>
              <i class="fas fa-arrow-left mr-2"></i>Back to Forum
            <% end %>
            <% if logged_in? && @forum_topic.user == current_user %>
              <%= link_to edit_forum_topic_path(@forum_topic), class: "border border-amber-500 text-amber-600 px-4 py-2 rounded-lg font-medium hover:bg-amber-50 transition-colors duration-300" do %>
                <i class="fas fa-edit mr-2"></i>Edit
              <% end %>
            <% end %>
            <% if logged_in? && (@forum_topic.user == current_user || current_user&.email == 'admin@skinsecretsnc.com') %>
              <%= button_to forum_topic_path(@forum_topic), 
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this topic? This will also delete all associated posts and cannot be undone." },
                  class: "border border-red-300 text-red-600 px-4 py-2 rounded-lg font-medium hover:bg-red-50 transition-colors duration-300",
                  form: { style: "display: inline;" } do %>
                <i class="fas fa-trash mr-2"></i>Delete
              <% end %>
            <% end %>
          </div>
        </div>
        
        <div class="topic-content prose prose-lg max-w-none text-gray-700 leading-relaxed">
          <div class="prose-headings:font-playfair prose-headings:text-gray-900 prose-p:text-gray-700 prose-p:leading-relaxed prose-p:mb-6 prose-strong:text-amber-700 prose-a:text-amber-600 prose-a:no-underline hover:prose-a:underline">
            <%= @forum_topic.formatted_content %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Posts Section -->
    <div class="posts-section">
      <% if @forum_posts.any? %>
        <h3 class="font-playfair text-2xl font-bold text-gray-900 mb-8">Discussion (<%= @forum_posts.count %> posts)</h3>
        
        <% @forum_posts.each do |post| %>
          <div class="bg-white rounded-2xl shadow-lg mb-6">
            <div class="p-8">
              <div class="flex flex-col lg:flex-row justify-between items-start lg:items-start mb-6">
                <div class="flex items-center mb-4 lg:mb-0">
                  <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center mr-4">
                    <i class="fas fa-user text-amber-600"></i>
                  </div>
                  <div>
                    <h6 class="font-semibold text-gray-900 mb-1"><%= post.user.full_name %></h6>
                    <div class="text-gray-500 text-sm">
                      <%= post.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                    </div>
                  </div>
                </div>
                <div class="flex gap-3">
                  <% if logged_in? %>
                    <button onclick="toggleReplyForm('<%= post.id %>')" class="border border-amber-500 text-amber-600 px-4 py-2 rounded-lg font-medium hover:bg-amber-50 transition-colors duration-300">
                      Reply
                    </button>
                  <% end %>
                  <% if logged_in? && post.user == current_user %>
                    <%= link_to edit_forum_topic_forum_post_path(@forum_topic, post), 
                        class: "border border-gray-300 text-gray-700 px-4 py-2 rounded-lg font-medium hover:bg-gray-50 transition-colors duration-300" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                  <% end %>
                  <% if logged_in? && (post.user == current_user || current_user&.email == 'admin@skinsecretsnc.com') %>
                    <%= button_to forum_topic_forum_post_path(@forum_topic, post), 
                        method: :delete,
                        data: { confirm: "Are you sure you want to delete this post? This action cannot be undone." },
                        class: "border border-red-300 text-red-600 px-4 py-2 rounded-lg font-medium hover:bg-red-50 transition-colors duration-300",
                        form: { style: "display: inline;" } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  <% end %>
                </div>
              </div>
              
              <div class="post-content mb-6 prose prose-gray max-w-none">
                <div class="prose-p:text-gray-700 prose-p:leading-relaxed prose-p:mb-4 prose-strong:text-amber-700 prose-a:text-amber-600 prose-a:no-underline hover:prose-a:underline">
                  <%= post.formatted_content %>
                </div>
              </div>
              
              <!-- Replies -->
              <% if post.replies.any? %>
                <div class="replies-section ml-8 space-y-4">
                  <% post.replies.each do |reply| %>
                    <div class="bg-gray-50 rounded-xl p-6">
                      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-start">
                        <div class="flex items-center mb-4 lg:mb-0">
                          <div class="w-8 h-8 bg-amber-100 rounded-full flex items-center justify-center mr-3">
                            <i class="fas fa-reply text-amber-600 text-sm"></i>
                          </div>
                          <div>
                            <div class="font-semibold text-gray-900 text-sm"><%= reply.user.full_name %></div>
                            <div class="text-gray-500 text-xs">
                              <%= reply.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                            </div>
                          </div>
                        </div>
                        <% if logged_in? && reply.user == current_user %>
                          <%= link_to edit_forum_topic_forum_post_path(@forum_topic, reply), 
                              class: "border border-gray-300 text-gray-700 px-3 py-1 rounded text-sm hover:bg-gray-50 transition-colors duration-300" do %>
                            <i class="fas fa-edit"></i>
                          <% end %>
                        <% end %>
                        <% if logged_in? && (reply.user == current_user || current_user&.email == 'admin@skinsecretsnc.com') %>
                          <%= button_to forum_topic_forum_post_path(@forum_topic, reply), 
                              method: :delete,
                              data: { confirm: "Are you sure you want to delete this reply? This action cannot be undone." },
                              class: "border border-red-300 text-red-600 px-3 py-1 rounded text-sm hover:bg-red-50 transition-colors duration-300",
                              form: { style: "display: inline;" } do %>
                            <i class="fas fa-trash"></i>
                          <% end %>
                        <% end %>
                      </div>
                      <div class="reply-content mt-3 text-gray-700 text-sm leading-relaxed">
                        <%= reply.formatted_content %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
              
              <!-- Reply Form -->
              <% if logged_in? %>
                <div id="reply-form-<%= post.id %>" class="hidden mt-6">
                  <div class="bg-gray-50 rounded-xl p-6">
                    <h6 class="font-semibold text-gray-900 mb-4">Reply to <%= post.user.first_name %></h6>
                    <%= form_with model: [@forum_topic, @new_post], 
                        url: forum_topic_forum_posts_path(@forum_topic),
                        local: true do |form| %>
                      <%= form.hidden_field :parent_post_id, value: post.id %>
                      <div class="mb-4">
                        <%= form.text_area :content, 
                            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors", 
                            rows: 3,
                            placeholder: "Write your reply..." %>
                      </div>
                      <div class="flex gap-3">
                        <%= form.submit "Post Reply", class: "bg-gradient-to-r from-amber-500 to-amber-600 text-white px-6 py-2 rounded-lg font-semibold hover:from-amber-600 hover:to-amber-700 transition-all duration-300" %>
                        <button type="button" class="border border-gray-300 text-gray-700 px-6 py-2 rounded-lg font-medium hover:bg-gray-50 transition-colors duration-300" 
                                onclick="toggleReplyForm('<%= post.id %>')">
                          Cancel
                        </button>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-12">
          <div class="w-24 h-24 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="fas fa-comments text-amber-600 text-2xl"></i>
          </div>
          <p class="text-gray-600 text-lg">No posts yet. Be the first to join the discussion!</p>
        </div>
      <% end %>
    </div>
    
    <!-- New Post Form -->
    <% if logged_in? %>
      <div class="bg-white rounded-2xl shadow-lg mt-8">
        <div class="p-8">
          <h4 class="font-playfair text-2xl font-bold text-gray-900 mb-6">Add Your Comment</h4>
          <%= form_with model: [@forum_topic, @new_post], 
              url: forum_topic_forum_posts_path(@forum_topic),
              local: true do |form| %>
            <div class="mb-6">
              <%= form.text_area :content, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors", 
                  rows: 4,
                  placeholder: "Share your thoughts, ask questions, or provide advice..." %>
            </div>
            <%= form.submit "Post Comment", class: "bg-gradient-to-r from-amber-500 to-amber-600 text-white px-8 py-3 rounded-lg font-semibold hover:from-amber-600 hover:to-amber-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1" %>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-2xl shadow-lg mt-8">
        <div class="p-8 text-center">
          <p class="text-gray-600 text-lg mb-6">Join the discussion! Sign in to post comments.</p>
          <%= link_to login_path, class: "bg-gradient-to-r from-amber-500 to-amber-600 text-white px-8 py-3 rounded-lg font-semibold hover:from-amber-600 hover:to-amber-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1" do %>
            <i class="fas fa-sign-in-alt mr-2"></i>Sign In to Comment
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
function toggleReplyForm(postId) {
  const form = document.getElementById('reply-form-' + postId);
  form.classList.toggle('hidden');
}
</script> 