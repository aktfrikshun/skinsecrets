<!-- Hero Section -->
<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-amber-50 via-white to-warm-50 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-20 left-20 w-72 h-72 bg-amber-300 rounded-full mix-blend-multiply filter blur-xl animate-float"></div>
    <div class="absolute top-40 right-20 w-72 h-72 bg-warm-300 rounded-full mix-blend-multiply filter blur-xl animate-float" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-20 left-1/2 transform -translate-x-1/2 w-72 h-72 bg-amber-200 rounded-full mix-blend-multiply filter blur-xl animate-float" style="animation-delay: 2s;"></div>
  </div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left animate-slide-up">
        <h1 class="font-playfair text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 leading-tight mb-6">
          Reveal Your
          <span class="bg-gradient-to-r from-amber-600 to-warm-600 bg-clip-text text-transparent">Natural Beauty</span>
        </h1>
        <p class="text-xl text-gray-600 mb-8 leading-relaxed max-w-2xl mx-auto lg:mx-0">
          Experience professional esthetician services that transform your skin and boost your confidence. My expert treatments are designed to enhance your natural radiance and unlock your skin's secrets.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <% if logged_in? %>
            <%= link_to new_appointment_path, class: "bg-gradient-to-r from-amber-500 to-amber-600 text-white px-8 py-4 rounded-full font-semibold text-lg hover:from-amber-600 hover:to-amber-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1" do %>
              <i class="fas fa-calendar-plus mr-2"></i>Book Appointment
            <% end %>
          <% else %>
            <%= link_to signup_path, class: "bg-gradient-to-r from-amber-500 to-amber-600 text-white px-8 py-4 rounded-full font-semibold text-lg hover:from-amber-600 hover:to-amber-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1" do %>
              <i class="fas fa-calendar-plus mr-2"></i>Book Appointment
            <% end %>
          <% end %>
          <%= link_to services_path, class: "border-2 border-amber-500 text-amber-600 px-8 py-4 rounded-full font-semibold text-lg hover:bg-amber-500 hover:text-white transition-all duration-300" do %>
            <i class="fas fa-spa mr-2"></i>Our Services
          <% end %>
        </div>
      </div>
      
      <!-- Visual Element -->
      <div class="relative flex justify-center lg:justify-end">
        <div class="relative w-80 h-80 lg:w-96 lg:h-96">
          <div class="absolute inset-0 bg-gradient-to-br from-amber-200 to-warm-200 rounded-full shadow-2xl animate-float"></div>
          <div class="absolute inset-4 bg-gradient-to-br from-amber-100 to-warm-100 rounded-full shadow-lg"></div>
          <div class="absolute inset-8 flex items-center justify-center">
            <%= image_tag "skin_secrets.jpeg", class: "w-full h-full object-cover rounded-full shadow-lg", alt: "Skin Secrets Logo" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

