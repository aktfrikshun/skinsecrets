<!-- Services Preview -->
<section class="py-20 bg-gradient-to-br from-gray-50 to-amber-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="font-playfair text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        My Signature Services
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Discover my most popular treatments designed to rejuvenate and enhance your natural beauty.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @services.each do |service| %>
        <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 group">
          <div class="p-8">
            <div class="relative w-16 h-16 mb-6">
              <div class="absolute inset-0 bg-gradient-to-br from-amber-400 to-amber-600 rounded-full shadow-lg group-hover:shadow-xl transition-all duration-300"></div>
              <div class="absolute inset-2 bg-white rounded-full flex items-center justify-center">
                <i class="fas fa-spa text-xl text-amber-600"></i>
              </div>
            </div>
            
            <h3 class="font-playfair text-2xl font-semibold text-gray-900 mb-4"><%= service.name %></h3>
            <p class="text-gray-600 mb-6 leading-relaxed"><%= service.description %></p>
            
            <div class="flex justify-between items-center mb-6">
              <span class="text-2xl font-bold text-amber-600"><%= service.formatted_price %></span>
              <span class="text-gray-500"><%= service.formatted_duration %></span>
            </div>
            
            <% if logged_in? %>
              <%= link_to new_appointment_path(service_id: service.id), class: "w-full bg-gradient-to-r from-amber-500 to-amber-600 text-white py-3 px-6 rounded-full font-semibold hover:from-amber-600 hover:to-amber-700 transition-all duration-300 text-center block" do %>
                <i class="fas fa-calendar-plus mr-2"></i>Book Now
              <% end %>
            <% else %>
              <%= link_to signup_path, class: "w-full bg-gradient-to-r from-amber-500 to-amber-600 text-white py-3 px-6 rounded-full font-semibold hover:from-amber-600 hover:to-amber-700 transition-all duration-300 text-center block" do %>
                <i class="fas fa-calendar-plus mr-2"></i>Book Now
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="text-center mt-12">
      <%= link_to services_path, class: "inline-flex items-center border-2 border-amber-500 text-amber-600 px-8 py-4 rounded-full font-semibold text-lg hover:bg-amber-500 hover:text-white transition-all duration-300" do %>
        <i class="fas fa-arrow-right mr-2"></i>View All Services
      <% end %>
    </div>
  </div>
</section>

