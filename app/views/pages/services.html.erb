<!-- Services Header -->
<section class="bg-gradient-to-br from-amber-50 to-warm-50 py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="font-playfair text-5xl md:text-6xl font-bold text-gray-900 mb-6">My Services</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">Discover my comprehensive range of professional esthetician services designed to enhance your natural beauty and promote healthy, radiant skin.</p>
    </div>
  </div>
</section>

<!-- Services Grid -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <% @services.each do |service| %>
        <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100">
          <div class="p-8">
            <div class="flex items-center mb-6">
              <div class="flex-shrink-0 w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-spa text-amber-600 text-xl"></i>
              </div>
              <div>
                <h3 class="font-playfair text-2xl font-bold text-gray-900 mb-2"><%= service.name %></h3>
                <div class="flex items-center">
                  <span class="text-amber-600 font-bold text-lg mr-4"><%= service.formatted_price %></span>
                  <span class="text-gray-500"><%= service.formatted_duration %></span>
                </div>
              </div>
            </div>
            
            <p class="text-gray-600 mb-6 leading-relaxed"><%= service.description %></p>
            
            <div class="flex justify-between items-center">
              <% if logged_in? %>
                <%= link_to new_appointment_path(service_id: service.id), class: "bg-gradient-to-r from-amber-500 to-amber-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-amber-600 hover:to-amber-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1" do %>
                  <i class="fas fa-calendar-plus mr-2"></i>Book This Service
                <% end %>
              <% else %>
                <%= link_to signup_path, class: "bg-gradient-to-r from-amber-500 to-amber-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-amber-600 hover:to-amber-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1" do %>
                  <i class="fas fa-calendar-plus mr-2"></i>Book This Service
                <% end %>
              <% end %>
              
              <div class="text-right">
                <div class="text-sm text-gray-500">Professional Treatment</div>
                <div class="text-sm text-gray-500">Premium Products</div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Service Categories -->
<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="font-playfair text-4xl font-bold text-gray-900 mb-6">Service Categories</h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">I offer specialized treatments across different categories to address your specific skin concerns.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <div class="text-center group">
        <div class="w-20 h-20 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-amber-200 transition-colors duration-300">
          <i class="fas fa-face-smile text-amber-600 text-2xl"></i>
        </div>
        <h5 class="font-semibold text-xl text-gray-900 mb-3">Facial Treatments</h5>
        <p class="text-gray-600">Deep cleansing, exfoliation, and hydration for all skin types.</p>
      </div>
      
      <div class="text-center group">
        <div class="w-20 h-20 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-amber-200 transition-colors duration-300">
          <i class="fas fa-magic text-amber-600 text-2xl"></i>
        </div>
        <h5 class="font-semibold text-xl text-gray-900 mb-3">Anti-Aging</h5>
        <p class="text-gray-600">Advanced treatments to reduce fine lines and restore youthful radiance.</p>
      </div>
      
      <div class="text-center group">
        <div class="w-20 h-20 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-amber-200 transition-colors duration-300">
          <i class="fas fa-leaf text-amber-600 text-2xl"></i>
        </div>
        <h5 class="font-semibold text-xl text-gray-900 mb-3">Acne Solutions</h5>
        <p class="text-gray-600">Targeted treatments for acne-prone skin and blemish control.</p>
      </div>
      
      <div class="text-center group">
        <div class="w-20 h-20 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-amber-200 transition-colors duration-300">
          <i class="fas fa-spa text-amber-600 text-2xl"></i>
        </div>
        <h5 class="font-semibold text-xl text-gray-900 mb-3">Relaxation</h5>
        <p class="text-gray-600">Soothing treatments for stress relief and overall wellness.</p>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="py-20 bg-gradient-to-r from-amber-500 to-amber-600">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="font-playfair text-4xl font-bold text-white mb-6">Ready to Transform Your Skin?</h2>
    <p class="text-xl text-amber-100 mb-8">Book your appointment today and experience the difference professional esthetician care can make.</p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <% if logged_in? %>
        <%= link_to new_appointment_path, class: "bg-white text-amber-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1" do %>
          <i class="fas fa-calendar-plus mr-2"></i>Book Appointment
        <% end %>
      <% else %>
        <%= link_to signup_path, class: "bg-white text-amber-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1" do %>
          <i class="fas fa-calendar-plus mr-2"></i>Book Appointment
        <% end %>
      <% end %>
      <a href="tel:9198970150" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-amber-600 transition-all duration-300">
        <i class="fas fa-phone mr-2"></i>Call Now
      </a>
    </div>
  </div>
</section> 